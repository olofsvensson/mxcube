<device class = "SimulateMultiCollect">
  <username>SimulateMultiCollect</username>
  <object href="/dbconnection" role="dbserver"/>

  <directory_prefix>id29</directory_prefix>
  <default_exposure_time>0.1</default_exposure_time>
  <minimum_exposure_time>0.1</minimum_exposure_time>
  <detector_fileext>cbf</detector_fileext>
  <detector_type>simulator</detector_type>
  <detector_manufacturer>dectris</detector_manufacturer>
  <detector_model>6m</detector_model>
  <detector_px>2000</detector_px>
  <detector_py>2000</detector_py>
  <focusing_optic>KB</focusing_optic>
  <monochromator_type>Si</monochromator_type>
  <beam_divergence_vertical>0.1</beam_divergence_vertical>
  <beam_divergence_horizontal>0.1</beam_divergence_horizontal>
  <polarisation>1.0</polarisation>
  
  <auto_processing>
    <program>
      <executable>/opt/pxsoft/bin/autoproc_master.pl</executable>
      <event>before image after end_multicollect</event>
    </program>
    <program>
      <executable>/users/blissadm/bin/autoproc-launcher.py</executable>
      <event>before</event>
    </program> 
  </auto_processing>
</device>